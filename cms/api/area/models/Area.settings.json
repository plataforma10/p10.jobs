{
  "connection": "default",
  "collectionName": "area",
  "info": {
    "name": "area",
    "description": "Este item representa un area de la empresa, la cual contara con posiciones de trabajo"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "Nombre": {
      "unique": true,
      "type": "string",
      "required": true
    },
    "Descripcion": {
      "type": "text",
      "required": true
    },
    "Posiciones": {
      "collection": "posicion",
      "via": "Area"
    },
    "Header": {
      "model": "header"
    },
    "SubTitulo": {
      "default": "",
      "type": "string"
    },
    "Activa": {
      "default": true,
      "type": "boolean",
      "required": true
    }
  }
}